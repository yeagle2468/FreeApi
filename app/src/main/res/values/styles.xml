<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar_Navigation_Button" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">35dp</item>
    </style>

    <style name="Action" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/toolbar_action_height</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolBarAction" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:actionMenuTextAppearance">@style/Action</item>
        <item name="android:actionMenuTextColor">@color/colorToolbarAction</item>
    </style>

</resources>
